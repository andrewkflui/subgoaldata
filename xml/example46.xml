<example>
  <title>Find factorial of N</title>
  <program>
print("Factorial Calculator")

N = int(input("Enter N for factorial of N: "))
count = 1   # the counter variable, runs from 1 to N
product = 1   # the variable for the product of 1 x 2 x ... x N

while count <= N:
    product = product * count
    count = count + 1

print("Factorial of", N, "is", product)

  </program>
