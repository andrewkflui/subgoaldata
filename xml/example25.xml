<example>
  <title>Cost of Buying Dumplings</title>
  <program>
dum = int(input("Enter the number of dumplings to buy: "))

amount = 2.5 * dum

if dum > 20:
    amount = amount - 0.5 * (dum - 20)

if (amount > 100):
    amount = amount * 0.9

print("Amount to pay is $", amount)

  </program>
