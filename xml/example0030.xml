<example>
  <title>Interest Calculator</title>
  <program>
amount = float(input("Enter the deposit amount (HK$): "))

if amount >= 100000:
    rate = 0.5  # percentage
else:
    rate = 0.1  # percentage

print("Amount of interest earned in 1 year = HK$", amount * rate / 100)

  </program>
