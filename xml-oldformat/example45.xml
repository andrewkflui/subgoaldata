<example>
  <title>Average of 4 assignment scores</title>
  <program>
total = 0  # accumuate the total score
count = 1  # the counter, will run from 0 to 3

while count <= 4:
    score = float(input("Enter assignment {} score: ".format(count)))
    total = total + score
    count = count + 1
print("Average score is ", total / 4)
  </program>
